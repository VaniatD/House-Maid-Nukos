<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <!--nukohair-->
  <ThingDef ParentName="WoolBase">
    <defName>MaidnukosHair</defName>
    <label>Nuko hair</label>
    <description>The hair of a nuko. It is super slim and has a smooth, appealing color. Great material for furnishings.</description>
    <graphicData>
      <texPath>Things/Item/nukohair</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <statBases>
      <MarketValue>4.2</MarketValue>
      <DeteriorationRate>2</DeteriorationRate>
      <StuffPower_Armor_Sharp>0.30</StuffPower_Armor_Sharp>
      <StuffPower_Armor_Blunt>0.10</StuffPower_Armor_Blunt>
      <StuffPower_Armor_Heat>0.30</StuffPower_Armor_Heat>
      <StuffPower_Insulation_Cold>15</StuffPower_Insulation_Cold>
      <StuffPower_Insulation_Heat>35</StuffPower_Insulation_Heat>
    </statBases>
    <stuffProps>
      <color>(240,205,177)</color>
      <commonality>0.06</commonality>
      <statOffsets>
        <Insulation_Cold>5</Insulation_Cold>
        <Insulation_Heat>5</Insulation_Heat>
        <Beauty>2</Beauty>
      </statOffsets>
      <statFactors>
        <Beauty>1.5</Beauty>
        <Flammability>0.6</Flammability>
        <MaxHitPoints>0.8</MaxHitPoints>
      </statFactors>
    </stuffProps>
  </ThingDef>
  <!--nukomilk-->
  <ThingDef ParentName="OrganicProductBase">
    <defName>MaidnukosMilk</defName>
    <label>Nuko milk</label>
    <description>The milk of a female nuko. It has a slightly fruity flavor and is rich in vitamins.</description>
    <graphicData>
      <texPath>Things/Item/nukomilk</texPath>
      <graphicClass>Graphic_StackCount</graphicClass>
    </graphicData>
    <socialPropernessMatters>true</socialPropernessMatters>
    <statBases>
      <MarketValue>6.4</MarketValue>
      <Mass>0.045</Mass>
      <MaxHitPoints>50</MaxHitPoints>
      <Nutrition>0.1</Nutrition>
      <Flammability>0.6</Flammability>
    </statBases>
    <comps>
      <li Class="CompProperties_Rottable">
        <daysToRotStart>13</daysToRotStart>
        <rotDestroys>true</rotDestroys>
      </li>
    </comps>
    <ingestible>
      <preferability>RawTasty</preferability>
      <foodType>AnimalProduct, Fluid</foodType>
      <joyKind>Gluttonous</joyKind>
      <joy>0.08</joy>
      <tasteThought>AteMaidnukosMilk</tasteThought>
      <maxNumToIngestAtOnce>5</maxNumToIngestAtOnce>
      <chairSearchRadius>21</chairSearchRadius>
      <ingestHoldUsesTable>false</ingestHoldUsesTable>
      <optimalityOffsetFeedingAnimals>-3</optimalityOffsetFeedingAnimals>
      <specialThoughtAsIngredient>AteMaidnukosMilk</specialThoughtAsIngredient>
      <outcomeDoers>
        <li Class="IngestionOutcomeDoer_OffsetNeed">
          <need>Rest</need>
          <offset>0.1</offset>
        </li>
      </outcomeDoers>
    </ingestible>
    <thingCategories>
      <li>AnimalProductRaw</li>
    </thingCategories>
  </ThingDef>
  <ThoughtDef>
    <defName>AteMaidnukosMilk</defName>
    <durationDays>0.7</durationDays>
    <stackLimit>1</stackLimit>
    <stages>
      <li>
        <label>Rich vitamins</label>
        <description>I just had nuko milk! It was delicious!</description>
        <baseMoodEffect>5</baseMoodEffect>
      </li>
    </stages>
  </ThoughtDef>
  <JoyGiverDef>
    <defName>EatMaidnukosMilk</defName>
    <giverClass>JoyGiver_Ingest</giverClass>
    <baseChance>2.3</baseChance>
    <thingDefs>
      <li>MaidnukosMilk</li>
    </thingDefs>
    <joyKind>Gluttonous</joyKind>
    <requiredCapacities>
      <li>Manipulation</li>
    </requiredCapacities>
  </JoyGiverDef>
  <!--nukoidbell-->
  <ThingDef>
    <defName>Nukoidbell</defName>
    <label>Nuko ID Bell</label>
    <description>A bell that serves as the identifier for a nuko. An internal chip contains 10086 EB's information. Can be equipped as an accessory.</description>
    <thingClass>Apparel</thingClass>
    <graphicData>
      <texPath>Things/Item/nukoidbell</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <onGroundRandomRotateAngle>35</onGroundRandomRotateAngle>
    </graphicData>
    <tickerType>Never</tickerType>
    <statBases>
      <Mass>0.2</Mass>
      <MarketValue>450</MarketValue>
      <Flammability>0</Flammability>
      <SellPriceFactor>1.3</SellPriceFactor>
      <MaxHitPoints>80</MaxHitPoints>
    </statBases>
    <thingCategories>
      <li>ApparelUtility</li>
    </thingCategories>
    <apparel>
      <careIfWornByCorpse>false</careIfWornByCorpse>
      <bodyPartGroups>
        <li>Neck</li>
      </bodyPartGroups>
      <layers>
        <li>Belt</li>
      </layers>
      <tags></tags>
    </apparel>
    <colorGenerator Class="ColorGenerator_Options">
      <options>
        <li>
          <weight>10</weight>
          <only>RGBA(1,1,1,1)</only>
        </li>
      </options>
    </colorGenerator>
    <category>Item</category>
    <selectable>True</selectable>
    <pathCost>10</pathCost>
    <useHitPoints>true</useHitPoints>
    <techLevel>Spacer</techLevel>
    <drawGUIOverlay>true</drawGUIOverlay>
    <altitudeLayer>Item</altitudeLayer>
    <alwaysHaulable>True</alwaysHaulable>
    <comps>
      <li Class="CompProperties_Forbiddable" />
      <li>
        <compClass>CompColorable</compClass>
      </li>
    </comps>
    <tradeability>Sellable</tradeability>
    <equippedStatOffsets>
      <MoveSpeed>0.05</MoveSpeed>
      <WorkSpeedGlobal>0.1</WorkSpeedGlobal>
    </equippedStatOffsets>
  </ThingDef>
  <!--hat-->
  <ThingDef>
    <defName>xmasantlers</defName>
    <label>Xmas antlers</label>
    <description>A pair of festive antlers that can be worn on one's head. Makes the wearer feel like an Xmas nuko, increasing their movement speed.</description>
    <thingClass>Apparel</thingClass>
    <category>Item</category>
    <selectable>True</selectable>
    <pathCost>10</pathCost>
    <useHitPoints>True</useHitPoints>
    <techLevel>Spacer</techLevel>
    <tickerType>Never</tickerType>
    <thingCategories>
      <li>Headgear</li>
    </thingCategories>
    <graphicData>
      <texPath>Things/Item/xmasantlers</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <onGroundRandomRotateAngle>35</onGroundRandomRotateAngle>
    </graphicData>
    <statBases>
      <MaxHitPoints>80</MaxHitPoints>
      <MarketValue>600</MarketValue>
      <Mass>0.4</Mass>
      <ArmorRating_Blunt>0.05</ArmorRating_Blunt>
      <ArmorRating_Sharp>0.05</ArmorRating_Sharp>
      <Insulation_Cold>10</Insulation_Cold>
      <Insulation_Heat>5</Insulation_Heat>
      <Flammability>0</Flammability>
      <DeteriorationRate>0</DeteriorationRate>
      <Beauty>7</Beauty>
      <SellPriceFactor>0.70</SellPriceFactor>
    </statBases>
    <equippedStatOffsets>
      <MoveSpeed>0.05</MoveSpeed>
      <SocialImpact>0.15</SocialImpact>
    </equippedStatOffsets>
    <generateCommonality>0.1</generateCommonality>
    <apparel>
      <bodyPartGroups>
        <li>UpperHead</li>
      </bodyPartGroups>
      <wornGraphicPath>Things/Item/xmasantlers</wornGraphicPath>
      <layers>
        <li>Overhead</li>
      </layers>
      <tags></tags>
      <hatRenderedFrontOfFace>true</hatRenderedFrontOfFace>
    </apparel>
    <colorGenerator Class="ColorGenerator_Options">
      <options>
        <li>
          <weight>10</weight>
          <only>RGBA(1,1,1,1)</only>
        </li>
      </options>
    </colorGenerator>
    <drawGUIOverlay>true</drawGUIOverlay>
    <altitudeLayer>Item</altitudeLayer>
    <alwaysHaulable>True</alwaysHaulable>
    <comps>
      <li Class="CompProperties_Forbiddable" />
      <li>
        <compClass>CompColorable</compClass>
      </li>
    </comps>
  </ThingDef>
</Defs>